.search_form, .search_table
  margin-top 20px
  width 100%
  height auto
  padding 10px 30px
  background #e6ebf2
  border-radius 5px
  box-shadow 0 3px 5px 0 rgba(210,210,210,0.5)
.search_form
  padding 20px 30px 0 30px
  .search_conditions
    height auto
    font-size 0
    .search_item
      display inline-block
      vertical-align top
      margin 0 30px 20px 0
      height 40px
      padding 3px 0
      line-height 34px
      font-size 0
      .search_label, .search_input
        display inline-block
        vertical-align top
        font-size 14px
      .search_input, .el-input__inner, .el-date-editor.el-input, .el-date-editor.el-input__inner
        width 180px
        height 34px
        .el-input__icon
          line-height 34px
      .line
        margin 0 5px
    .blue-btn
      display inline-block
      vertical-align top
      margin 5px 10px 0 5px
      width auto
      height 30px
      line-height 30px
      padding 0 20px
      border-radius 5px
      letter-spacing 5px
      color #fff
      background rgba(22, 155, 213, 1)
      box-shadow 0 5px 8px 0 rgba(22, 155, 213, 0.5)
      cursor pointer
.search_table
  padding 30px
  table
    width 100%
    text-align center
    th, td
      border 1px solid rgba(121, 121, 121, 1)
    thead
      width 100%
      height 34px
      line-height 34px
      background rgba(242, 242, 242, 1)
    tbody
      width 100%
      height auto
      background #fff
      tr
        height 30px
        line-height 30px
        td.operation
          font-size 0
          .modify, .reset, .delete
            display inline-block
            vertical-align middle
            margin-right 10px
            letter-spacing 0
            width auto
            height 22px
            line-height 22px
            padding 0 5px
          .delete
            margin-right 0
