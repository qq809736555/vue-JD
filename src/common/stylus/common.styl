.search_form, .search_table
  width 100%
  height auto
  padding 10px 30px
  background #fff
  border-radius 5px
  box-shadow 0 3px 5px 0 rgba(210,210,210,0.5)
.search_form
  .search_conditions
    height auto
    font-size 0
    .search_item, .search_btn_wrapper
      display inline-block
      vertical-align top
      margin 10px 30px 10px 0
      height 40px
      padding 3px 0
      line-height 34px
      font-size 0
      .search_label, .search_input, .search_select
        display inline-block
        vertical-align top
        font-size 12px
      .search_input, .el-input__inner, .el-date-editor.el-input, .el-date-editor.el-input__inner, .search_select
        padding-right 20px
        width 180px
        height 34px
        .el-input__icon
          line-height 34px
      .line
        margin 0 5px
    .search_item
      position relative
      .icon-dropDown
        position absolute
        right 5px
        top 14px
        font-size 12px
        color #666e79
    .red-btn
      display inline-block
      vertical-align top
      margin 5px 10px 0 5px
      width auto
      height 30px
      line-height 30px
      padding 0 15px
      border-radius 5px
      letter-spacing 5px
      color #fff
      background #e2231a
      cursor pointer
    .export_btn, .add_btn, .import_btn
      background #fff
      color #e2231a
      border 1px solid #e2231a
      line-height 28px
.search_table
  margin-top 20px
  padding 30px
  table
    width 100%
    text-align center
    th, td
      border 1px solid #e0e0e0
    thead
      width 100%
      height 34px
      line-height 34px
      background #f5f5f5
    tbody
      width 100%
      height auto
      background #fff
      tr
        height 30px
        line-height 30px
        td.operation
          font-size 0
          .modify, .reset, .delete
            display inline-block
            vertical-align middle
            margin-right 10px
            letter-spacing 0
            width auto
            height 22px
            line-height 22px
            padding 0 5px
            color #e2231a
            cursor pointer
          .delete
            margin-right 0
